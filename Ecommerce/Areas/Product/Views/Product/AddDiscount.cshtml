@model Discount

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Discount</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="ProductId" value="@ViewBag.pid" />
        
       
        <div class="form-group mb-3">
            <label asp-for="DiscountType"></label>
            <select asp-for="DiscountType" class="form-control">
                <option>Amount</option>
                <option>Percentage</option>

            </select>
        </div>

        <div class="mb-3">
            <label>Discount Amount/percentage</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" style="color:red"></span>
          
            <span style="color:red">@ViewBag.adddisErroe</span>
        </div>
        <div class="mb-3">
            <label asp-for="FromTo"></label>
            <input asp-for="FromTo" type="datetime-local" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"/>
            <span asp-validation-for="FromTo" style="color:red"></span>

        </div>

        <div class="mb-3">
            <label asp-for="validTo"></label>
            <input asp-for="validTo" type="datetime-local" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"/>
            <span asp-validation-for="validTo" style="color:red"></span>

        </div>
                   
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        
        <a class="btn btn-secondary" asp-action="Index" style="width:150px"><i class="bi bi-backspace-fill"></i> Back To List</a>


    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptspartial"></partial>
    }
}


